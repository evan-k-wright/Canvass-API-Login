		{
			"name": "Get Products",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "4fc85da7-6302-43d1-bca9-7304be4466dd",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Content-Type = application/json\", function () {",
							"    pm.response.to.have.header(\"Content-Type\");",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.equal(\"application/json\");",
							"});",
							"",
							"const jsonData = pm.response.json();",
							"",
							"pm.test(\"Products\", function() {",
							"    console.log(jsonData);",
							"    pm.expect(jsonData.length).to.equal(3); ",
							"});",
							"",
							"pm.test(\"Product Name\", function() {",
							"    pm.expect(jsonData[0]).to.equal(\"canvass\");",
							"    pm.expect(jsonData[1]).to.equal(\"canvass_demographics\");",
							"    pm.expect(jsonData[2]).to.equal(\"compete\");",
							"});",
							"",
							"const schema = {",
							"  \"definitions\": {},",
							"  \"$schema\": \"http://json-schema.org/draft-07/schema#\",",
							"  \"$id\": \"http://example.com/root.json\",",
							"  \"type\": \"array\",",
							"  \"items\": {",
							"    \"$id\": \"#/items\",",
							"    \"type\": \"string\",",
							"    \"examples\": [",
							"      \"canvass\",",
							"      \"canvass_demographics\",",
							"      \"compete\"",
							"    ],",
							"    \"pattern\": \"^(.*)$\"",
							"  }",
							"}",
							"",
							"pm.test(\"Schema Validate\", function() {",
							"    const validate = tv4.validate(pm.response.json(), schema, false, true);",
							"    if(validate === false) {",
							"        console.log(tv4.error.dataPath, tv4.error.schemaPath, tv4.error.message);",
							"    }",
							"    ",
							"    pm.expect(validate).to.be.true;",
							"})",
							""
						],
						"type": "text/javascript"
					}
				}
